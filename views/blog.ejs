<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog page</title>
</head>
<body>
    <%- include('./partials/nav') %>
    
    <div class="container">
        <h1><%=blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="500px"  alt="image">
        <p><%= blog.body %></p>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" alt="profileImage" width="50px" >  <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3"> 
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
          
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter your comment here" name="content">
                </div>
    
                <button type="submit" class="btn btn-sm btn-primary">Add</button>
              </form>
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comments=> { %>
                <div class="container">
                    <img src="<%= blog.createdBy.profileImageURL %>" alt="profileImage" width="50px">
                    <%= blog.createdBy.fullName %>
                        <pre><%= comments.content %></pre>
                </div>
                <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>